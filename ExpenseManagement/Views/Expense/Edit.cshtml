@model ExpenseManagement.ViewModels.UpdateExpenseVM
@{
    ViewData["Title"] = "New Expense";
}

<div class="text-center">
    <h1 class="display-4">Add New Expense</h1>
</div>
<div asp-validation-summary="All"></div>
<div class="row">
    <div class="card col-md-6 mx-auto">
        <div class="card-body">
            <form asp-controller="Expense" asp-action="Edit" method="post">
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" value="@Model.Date" type="text" class="form-control">
                    <span asp-validation-for="Date" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" value="@Model.Description." type="text" class="form-control" placeholder="Enter description">
                    <span asp-validation-for="Description" class="form-text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount">Amount</label>
                    <input asp-for="Amount" value="@Model.Amount" type="text" class="form-control" placeholder="Enter amount">
                    <span asp-validation-for="Amount" class="form-text text-danger"></span>
                </div>
                <div class="form-group custom-file">
                    <p class="">@Model.Receipt</p>
                </div>
                <div class="form-group custom-file">
                    <input asp-for="Receipt" value="@Model.Receipt" type="file" class="form-control custom-file-input">
                    <label asp-for="Receipt" class="custom-file-label">Choose file</label>
                    <span asp-validation-for="Receipt" class="form-text text-danger"></span>
                </div>
                <input asp-for="ID" type="hidden">
                <button type="submit" class="btn btn-primary my-3">Submit</button>
                <a href="/Expense/Detail/@Model.ID" class="btn btn-primary my-3">Cancel</a>

            </form>
        </div>
    </div>
</div>


@model ExpenseManagement.ViewModels.ExpensesAndUserVM



<div class="text-center">
    <h1 class="display-4">Expense Management Dashboard</h1>
</div>
<div class="text-center row">
    <h1 class="expense-status">New Expenses</h1>
</div>
<div class="row">
    @foreach (var expense in Model.Expenses)
    {
        @if (expense.Status == "New")
        {
            @if ((expense.UserId == Model.UserId) || (Model.IsAdmin || Model.IsManager))
            {
                <div class="card col-md-3 status-new expense-card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@expense.Description</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@expense.Date</h6>
                        <h6 class="card-subtitle mb-2 text-muted">@expense.Amount</h6>
                        <a href="/Expense/Detail/@expense.ID" class="card-link">See Detail</a>
                    </div>
                </div>
                }
            }
    }
</div>

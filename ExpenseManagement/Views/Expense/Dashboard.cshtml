            <div class="card col-md-3 status-paid">
                <div class="card-body">
                    <h5 class="card-title">@expense.Description</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@expense.Date</h6>
                    <p class="card-text">@expense.Comments</p>
                    <a asp-controller="Expense" asp-action="Detail" class="card-link">See Detail</a>
                </div>
            </div>
        }
    }
</div>
<div class="text-center row">
    <h1 class="expense-status">Canceled/Rejected Expenses</h1>
</div>
<div class="row">
    @foreach (var expense in Model)
    {
        @if (expense.Status == "Canceled/Rejected")

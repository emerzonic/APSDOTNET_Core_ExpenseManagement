@model ExpenseManagement.ViewModels.EmployeeSignupVM
@{
    ViewData["Title"] = "New Expense";
}

<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
</div>

<div class="row">
    <div class="card col-md-8 mx-auto">
        <div class="card-body">
            <form asp-action="Signup" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name">
                        <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Last Name">
                        <span asp-validation-for="LastName" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">
                        <span asp-validation-for="Email" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
                        <span asp-validation-for="Password" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="AccessCode">Access Code</label>
                        <input asp-for="AccessCode" type="password" class="form-control" placeholder="Enter Access Code">
                        <small class="form-text text-muted">Please provide an access code if you have one.</small>
                    </div>
                </div>
                <a href="/" class="btn btn-primary my-3">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

